# Top-most EditorConfig file to stop searching in parent directories
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# Settings for Lua files (Neovim configuration)
[*.lua]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 100

# Settings for JSON files (lazy-lock.json, .luarc.json, etc.)
[*.json]
indent_style = space
indent_size = 2
tab_width = 2

# Settings for Markdown files
[*.md]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = false

# Settings for YAML files (if any)
[*.{yml,yaml}]
indent_style = space
indent_size = 2
tab_width = 2

# Settings for Git files
[.gitignore]
indent_style = space
indent_size = 2
tab_width = 2

# Settings for backup files - no formatting
[*.{bak,backup}]
insert_final_newline = false
trim_trailing_whitespace = false

# Settings for shell scripts (if any)
[*.{sh,bash}]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf

# Settings for PowerShell scripts (Windows)
[*.{ps1,psm1}]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = crlf

# Settings for C# files (since you have omnisharp config)
[*.{cs,csx}]
indent_style = space
indent_size = 4
tab_width = 4

# Settings for Razor files
[*.{razor,cshtml}]
indent_style = space
indent_size = 4
tab_width = 4

# Settings for JavaScript/TypeScript (since you have ts_ls config)
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
tab_width = 2

# Settings for HTML files
[*.{html,htm}]
indent_style = space
indent_size = 2
tab_width = 2

# Settings for CSS files
[*.css]
indent_style = space
indent_size = 2
tab_width = 2

# Settings for Go files (since you have gopls config)
[*.go]
indent_style = tab
tab_width = 4

# Settings for SQL files (since you have JDBC mapping functionality)
[*.sql]
indent_style = space
indent_size = 2
tab_width = 2
